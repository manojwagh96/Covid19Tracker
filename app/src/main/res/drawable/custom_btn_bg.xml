<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">


        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/deaths"
                android:endColor="@color/active"
                android:angle="45"
                />
            <corners
                android:radius="40dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">

        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/deaths"
                android:endColor="@color/active"
                android:angle="45"
                />
            <corners
                android:radius="40dp"/>
        </shape>

    </item>


</selector>